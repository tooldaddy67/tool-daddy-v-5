rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
        return request.auth != null;
    }
    
    // Helper to check if user is owner
    function isOwner(userId) {
        return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper to check if user is admin (requires custom claim or specific email)
    function isAdmin() {
        return isAuthenticated() && (
            request.auth.token.admin == true || 
            (request.auth.token.email != null && request.auth.token.email.matches('.*@tooldaddy[.]com')) ||
            (exists(/databases/$(database)/documents/profiles/$(request.auth.uid)) && 
             (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.get('isAdmin', false) == true ||
              get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.get('is_admin', false) == true))
        );
    }

    // Profiles: User can read/write their own. Admin can read all.
    match /profiles/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin() || (isOwner(userId) && (
        // For updates: cannot change sensitive fields
        (resource != null && 
         !request.resource.data.diff(resource.data).affectedKeys().has('isAdmin') && 
         !request.resource.data.diff(resource.data).affectedKeys().has('is_admin')) ||
        // For creates: cannot set sensitive fields to true
        (resource == null && 
         request.resource.data.get('isAdmin', false) == false && 
         request.resource.data.get('is_admin', false) == false)
      ));
    }

    // Tool Usage: User can read/write their own. Admin can read all.
    match /tool_usage/{docId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Feedback: Public read. Auth create. Owner/Admin update/delete.
    match /feedback/{docId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
                    request.resource.data.userId == request.auth.uid &&
                    request.resource.data.status == 'pending' &&
                    (!('upvotedBy' in request.resource.data) || request.resource.data.upvotedBy.size() == 0);
      
      allow update: if isAuthenticated() && (
        // Admin can update everything (status, reply, etc.)
        isAdmin() ||
        // Regular user can only upvote/downvote OR update their own feedback (if pending/open)
        (
          // Case 1: Upvoting/Downvoting (only adding/removing their own UID)
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotedBy']) &&
           (request.resource.data.upvotedBy.removeAll(resource.data.upvotedBy).hasOnly([request.auth.uid]) ||
            resource.data.upvotedBy.removeAll(request.resource.data.upvotedBy).hasOnly([request.auth.uid]))) ||
          
          // Case 2: Owner updating title/description (if not resolved/closed)
          (resource.data.userId == request.auth.uid && 
           resource.data.status in ['pending', 'open'] &&
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['title', 'description']))
        )
      );
      
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // OTPs: Server only.
    match /otps/{docId} {
      allow read, write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

